@{
    Layout = "_Layout";
}

<h1>Pokemon List</h1>

<table id="tablePokemon" class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="tbodyPokemon">
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modalPokemon" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Konten Modal -->
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <!-- Kolom Gambar -->
                            <div class="col-md-4">
                                <img alt="image" class="poke-img">
                                <span class="types">Type</span>

                            </div>

                            <!-- Kolom Data -->
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h5>Description</h5>
                                        <p id="descPokemon"></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h5>Stats</h5>
                                        <p id="statHp"></p>
                                        <p id="statAttack"></p>
                                        <p id="statDefense"></p>
                                        <p id="statSpecAtk"></p>
                                        <p id="statSpecDef"></p>
                                        <p id="statSpeed"></p>
                                    </div>
                                    <div class="col-md-6">
                                        <h5>Moves</h5>
                                        <p id="moveType"></p>
                                        <p id="statAccuracy"></p>
                                        <p id="statPower"></p>
                                        <p id="statPP"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Pokemon.js"></script>
}